repos:
-   repo: https://github.com/pre-commit/pre-commit-hooks
    rev: v3.2.0
    hooks:
    - id: trailing-whitespace
    - id: check-merge-conflict
    - id: check-added-large-files
      args: [--maxkb=5000]
-   repo: https://github.com/ambv/black
    rev: 20.8b1
    hooks:
    - id: black
      language_version: python3.8
-   repo: https://gitlab.com/pycqa/flake8.git
    rev: 3.8.3
    hooks:
    - id: flake8
-   repo: local
    hooks:
    -   id: check-conventional-commits
        name: Check Conventional Commits
        entry: "bash -c '[[ $(cat \"$1\") =~ ^(feat|fix|chore|docs|style|refactor|test|perf)(\\(.+\\))?:\\ .+ ]] || { echo \"‚ùå Commit message must follow Conventional Commits format.\"; exit 1; }'"
        language: system
        stages: [commit-msg]
        types: [commit-msg]
