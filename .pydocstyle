[pydocstyle]
# NumPy docstring convention compliance for SolarWindPy
convention = numpy

# Match all Python files except test files
match = (?!test_).*\.py

# Selective ignores for practical implementation
# D100: Missing docstring in public module (will be addressed selectively)
# D104: Missing docstring in public package (selective for __init__.py)
# D105: Missing docstring in magic method (focus on key methods)
add-ignore = D100,D104,D105

# Target the solarwindpy package specifically
add-source = solarwindpy/

# Additional configuration
count = true